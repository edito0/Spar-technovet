    $(document).ready(function () {
      $('.deleteData').click(function () {
        var postId = $(this).attr('data-id')
        var obj = $(this);

        $.ajax({
          url: "/admin/deletemediadata",
          type: "POST",
          data: { id: postId }
        })
      })
    })
  </script>


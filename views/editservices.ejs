    <div class="sehs-1-2">
      <h3>SERVICES PAGE</h3>

      <div class="sehs-1-2-2">
        <form action="/admin/editservices" method="POST" enctype="multipart/form-data">
          <label for="">Title</label>
          <input type="text" name="title" placeholder="Enter Title">
          <label for="">Image</label>
          <input type="file" name="image">
          <label for="">content</label>
          <textarea name="content" id="" cols="30" rows="10" placeholder="Enter Content"></textarea>
          <input type="submit" value="submit">
        </form>
      </div>

      <div class="sehs-1-2-3">
        <ul>
          <li class="sehs-1-2-3-heading"><p>IMAGES</p><p>TITLE</p><p>CONTENT</p><a></a></li>
          <% for (var i=0; i <editservices.length; i++ ) { %>
            <li class="text-closed"> 
              <img data-src="/images/<%= editservices[i].services_image %>" alt="<%= editservices[i].services_image %>">
              <p> 
                <%=editservices[i].services_title%>
              </p>
              <p>
                <%=editservices[i].services_content%>
              </p>
              <a href=""><i class="fa-solid fa-trash deleteData" data-id="<%=editservices[i]._id%>"></i></a>

            </li>

            <%}%>

        </ul>
      </div>

    </div>

  </section>

  <script>

const focustext = document.querySelectorAll('.text-closed');
    focustext.forEach((e)=>{
         e.addEventListener('click',()=>{
           e.classList.toggle('text-active');
         }); 
    })
  

    $(document).ready(function () {
       $('.deleteData').click(function(){
        var postId = $(this).attr('data-id')
        var obj = $(this);

        $.ajax({
          url:"/admin/deleteservicesdata",
          type: "POST",
          data: {id:postId}
        })
       })
    })
  </script>

  </body>


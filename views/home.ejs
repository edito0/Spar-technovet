    <script>
        //FOR THE HOME PAGE SLIDER


        const image_super_container = document.querySelector('.shs-1');
        const image_container = document.querySelector('.shs-1-1');
        const image_container_images = document.querySelectorAll('.shs-1-1-img');
        const arrowLeft = document.querySelector('.arrow-left');
        const arrowRight = document.querySelector('.arrow-right');

        var pos = -100;

        for (let index = 0; index < image_container_images.length; index++) {
            image_container_images[index].style.left = `${pos + 100}%`;
            pos = pos + 100;
        }


 
        var x = 0;
        var len = image_container_images.length;



        const slideLeft = () => {

            if (len * 100 == -(x - 100)) {
                x = 100;
            }

            image_container.style.transform = `translateX(${x - 100}%)`;
            x = x - 100;

        }

        arrowRight.addEventListener('click', slideLeft);

        const slideRight = () => {

            if (x < 0) {

                image_container.style.transform = `translateX(${x + 100}%)`;
                x = x + 100;

            }
 
        }

        arrowLeft.addEventListener('click', slideRight);

        setInterval(slideLeft, 9000)  



        const imgLink = image_container_images[0].getAttribute('data-src')
        image_container_images[0].setAttribute('src',imgLink);


    </script> 



